# Ignore everything in saleor-apps monorepo except custom apps
/*
!/.gitignore
!/apps
/apps/*
!/apps/inventory-ops
!/apps/buylist
!/apps/price-sync
!/apps/pos
!/apps/mtg-import
# Track Stripe app customizations for HTTP staging
!/apps/stripe
/apps/stripe/*
!/apps/stripe/Dockerfile
!/apps/stripe/src
/apps/stripe/src/*
!/apps/stripe/src/pages
/apps/stripe/src/pages/*
!/apps/stripe/src/pages/_document.tsx
!/apps/stripe/src/pages/_app.tsx
# Track App Router API routes (health, tRPC root for smoke tests)
!/apps/stripe/src/app
/apps/stripe/src/app/*
!/apps/stripe/src/app/api
/apps/stripe/src/app/api/*
!/apps/stripe/src/app/api/health
!/apps/stripe/src/app/api/trpc
/apps/stripe/src/app/api/trpc/*
!/apps/stripe/src/app/api/trpc/route.ts

# Track shared trpc package for basePath fix (critical for ALB routing)
!/packages
/packages/*
!/packages/trpc
/packages/trpc/*
!/packages/trpc/src
/packages/trpc/src/*
!/packages/trpc/src/http-batch-link.ts

# Ignore build artifacts in all apps
apps/**/node_modules
apps/**/.next
apps/**/dist
apps/**/.turbo
