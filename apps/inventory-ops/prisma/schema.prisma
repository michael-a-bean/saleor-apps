// Inventory Ops App - Database Schema
// PostgreSQL with Prisma ORM

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Multi-tenant support - all tables scoped by saleorApiUrl + appId
model AppInstallation {
  id           String   @id @default(uuid())
  saleorApiUrl String
  appId        String
  installedAt  DateTime @default(now())

  suppliers       Supplier[]
  purchaseOrders  PurchaseOrder[]
  costLayerEvents CostLayerEvent[]

  @@unique([saleorApiUrl, appId])
  @@index([saleorApiUrl])
}

// Vendor/Supplier master data
model Supplier {
  id             String          @id @default(uuid())
  installationId String
  installation   AppInstallation @relation(fields: [installationId], references: [id], onDelete: Cascade)

  code         String
  name         String
  contactName  String?
  contactEmail String?
  contactPhone String?
  address      String?
  notes        String?
  isActive     Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  purchaseOrders PurchaseOrder[]

  @@unique([installationId, code])
  @@index([installationId])
  @@index([isActive])
}

// Purchase Order Status State Machine
// DRAFT -> PENDING_APPROVAL -> APPROVED -> PARTIALLY_RECEIVED -> FULLY_RECEIVED
// DRAFT -> CANCELLED (at any point before FULLY_RECEIVED)
enum POStatus {
  DRAFT
  PENDING_APPROVAL
  APPROVED
  PARTIALLY_RECEIVED
  FULLY_RECEIVED
  CANCELLED
}

// Purchase Order Header
model PurchaseOrder {
  id             String          @id @default(uuid())
  installationId String
  installation   AppInstallation @relation(fields: [installationId], references: [id], onDelete: Cascade)

  orderNumber       String
  supplierId        String
  supplier          Supplier @relation(fields: [supplierId], references: [id])
  saleorWarehouseId String   // Saleor warehouse ID (destination)

  status POStatus @default(DRAFT)

  expectedDeliveryAt DateTime?
  notes              String?
  externalReference  String?   // External invoice/PO reference

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  approvedAt  DateTime?
  approvedBy  String?   // Saleor user ID
  submittedAt DateTime? // When submitted for approval
  submittedBy String?   // Saleor user ID

  lines         PurchaseOrderLine[]
  goodsReceipts GoodsReceipt[]

  @@unique([installationId, orderNumber])
  @@index([installationId])
  @@index([supplierId])
  @@index([status])
  @@index([saleorWarehouseId])
}

// Purchase Order Line Items
model PurchaseOrderLine {
  id              String        @id @default(uuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)

  saleorVariantId   String  // Saleor product variant ID
  saleorVariantSku  String? // Cached for display
  saleorVariantName String? // Cached for display

  qtyOrdered   Int
  qtyReceived  Int     @default(0) // Denormalized for performance
  qtyRemaining Int     @default(0) // = qtyOrdered - qtyReceived

  expectedUnitCost Decimal @db.Decimal(19, 4)
  currency         String  @db.VarChar(3)

  lineNumber Int
  notes      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  goodsReceiptLines GoodsReceiptLine[]

  @@index([purchaseOrderId])
  @@index([saleorVariantId])
}

// Goods Receipt Status State Machine
// DRAFT -> POSTED -> REVERSED
enum GRStatus {
  DRAFT
  POSTED   // Successfully posted to Saleor stock
  REVERSED // Fully reversed
}

// Goods Receipt Header
model GoodsReceipt {
  id              String        @id @default(uuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])

  receiptNumber     String
  saleorWarehouseId String // Saleor warehouse ID

  status GRStatus @default(DRAFT)

  receivedAt DateTime? // When goods were physically received
  postedAt   DateTime? // When posted to Saleor
  postedBy   String?   // Saleor user ID

  // Reversal tracking - a reversal GR references the original
  reversalOfGrId String?       @unique
  reversalOfGr   GoodsReceipt? @relation("Reversal", fields: [reversalOfGrId], references: [id])
  reversedByGr   GoodsReceipt? @relation("Reversal")

  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lines       GoodsReceiptLine[]
  landedCosts LandedCost[]

  @@index([purchaseOrderId])
  @@index([status])
  @@index([saleorWarehouseId])
}

// Goods Receipt Line Items
model GoodsReceiptLine {
  id             String       @id @default(uuid())
  goodsReceiptId String
  goodsReceipt   GoodsReceipt @relation(fields: [goodsReceiptId], references: [id], onDelete: Cascade)

  // Link to PO line (optional - allows ad-hoc receipts)
  purchaseOrderLineId String?
  purchaseOrderLine   PurchaseOrderLine? @relation(fields: [purchaseOrderLineId], references: [id])

  saleorVariantId   String
  saleorVariantSku  String? // Cached for display
  saleorVariantName String? // Cached for display

  qtyReceived Int
  unitCost    Decimal @db.Decimal(19, 4)
  currency    String  @db.VarChar(3)

  lineNumber Int
  notes      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  landedCostAllocations LandedCostAllocation[]
  costLayerEvents       CostLayerEvent[]

  @@index([goodsReceiptId])
  @@index([saleorVariantId])
  @@index([purchaseOrderLineId])
}

// Landed Cost Types
enum LandedCostType {
  FREIGHT
  DUTY
  INSURANCE
  HANDLING
  OTHER
}

// Allocation Methods for Landed Costs
enum AllocationMethod {
  VALUE    // Proportional to line value (default)
  QUANTITY // Equal per unit
}

// Landed Cost Header
model LandedCost {
  id             String       @id @default(uuid())
  goodsReceiptId String
  goodsReceipt   GoodsReceipt @relation(fields: [goodsReceiptId], references: [id], onDelete: Cascade)

  costType    LandedCostType
  description String
  amount      Decimal        @db.Decimal(19, 4)
  currency    String         @db.VarChar(3)

  allocationMethod AllocationMethod @default(VALUE)
  isAllocated      Boolean          @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  allocations LandedCostAllocation[]

  @@index([goodsReceiptId])
}

// Landed Cost Allocation per Line
model LandedCostAllocation {
  id           String     @id @default(uuid())
  landedCostId String
  landedCost   LandedCost @relation(fields: [landedCostId], references: [id], onDelete: Cascade)

  goodsReceiptLineId String
  goodsReceiptLine   GoodsReceiptLine @relation(fields: [goodsReceiptLineId], references: [id], onDelete: Cascade)

  allocatedAmount Decimal @db.Decimal(19, 4)

  createdAt DateTime @default(now())

  @@unique([landedCostId, goodsReceiptLineId])
  @@index([goodsReceiptLineId])
}

// Cost Layer Event Types
enum CostEventType {
  GOODS_RECEIPT         // Positive qty from receiving
  GOODS_RECEIPT_REVERSAL // Negative qty from reversal
  LANDED_COST_ADJUSTMENT // Adjustment from landed cost allocation
}

// Append-Only Cost Layer Events (IMMUTABLE LEDGER)
// This table should NEVER be updated or deleted - only inserted
model CostLayerEvent {
  id             String          @id @default(uuid())
  installationId String
  installation   AppInstallation @relation(fields: [installationId], references: [id])

  eventType CostEventType

  saleorVariantId   String
  saleorWarehouseId String

  // Qty delta: positive for receipts, negative for reversals
  qtyDelta Int
  unitCost Decimal @db.Decimal(19, 4)
  currency String  @db.VarChar(3)

  // Landed cost portion (added to unitCost for total cost)
  landedCostDelta Decimal @default(0) @db.Decimal(19, 4)

  // Source reference
  sourceGrLineId String?
  sourceGrLine   GoodsReceiptLine? @relation(fields: [sourceGrLineId], references: [id])

  // Computed WAC at time of event (for audit trail)
  wacAtEvent       Decimal? @db.Decimal(19, 4)
  qtyOnHandAtEvent Int?

  eventTimestamp DateTime @default(now())
  createdBy      String?  // Saleor user ID

  // NOTE: No updatedAt - this table is append-only

  @@index([installationId, saleorVariantId, saleorWarehouseId])
  @@index([sourceGrLineId])
  @@index([eventTimestamp])
  @@index([eventType])
}

// Posting Status for Saleor Mutations
enum PostingStatus {
  PENDING
  SUCCESS
  FAILED
}

// Idempotency Tracking for Saleor Stock Mutations
model SaleorPostingRecord {
  id             String @id @default(uuid())
  idempotencyKey String @unique

  grLineId     String
  mutationType String // e.g., "stockBulkUpdate"

  saleorResponse Json? // Store full response for debugging
  requestPayload Json? // Store request for debugging

  status       PostingStatus @default(PENDING)
  errorMessage String?

  createdAt   DateTime  @default(now())
  completedAt DateTime?

  @@index([grLineId])
  @@index([status])
  @@index([createdAt])
}

// Audit Trail for Key Operations
model AuditEvent {
  id String @id @default(uuid())

  installationId String
  entityType     String  // e.g., "PurchaseOrder", "GoodsReceipt"
  entityId       String
  action         String  // e.g., "CREATED", "APPROVED", "POSTED", "REVERSED"
  userId         String? // Saleor user ID

  previousState Json? // Snapshot before change
  newState      Json? // Snapshot after change
  metadata      Json? // Additional context

  createdAt DateTime @default(now())

  @@index([installationId])
  @@index([entityType, entityId])
  @@index([action])
  @@index([createdAt])
}
