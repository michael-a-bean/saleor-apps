{
  "extends": "@saleor/typescript-config-apps/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/generated/*": ["generated/*"],
      "@/package.json": ["package.json"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "erasableSyntaxOnly": true,
    "incremental": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "generated/**/*.ts",
    "graphql.config.ts",
    "next-env.d.ts",
    "next.config.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
