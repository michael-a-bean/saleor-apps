{
  "name": "price-sync",
  "version": "1.0.0",
  "private": true,
  "description": "Price sync worker - fetches MTG card prices from Scryfall/TCGPlayer",
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.mjs",
    "sync:full": "tsx src/index.ts full",
    "sync:delta": "tsx src/index.ts delta",
    "sync:variant": "tsx src/index.ts variant",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "prisma generate --schema=../inventory-ops/prisma/schema.prisma",
    "db:push": "prisma db push --schema=../inventory-ops/prisma/schema.prisma"
  },
  "prisma": {
    "schema": "../inventory-ops/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "p-limit": "^4.0.0",
    "p-retry": "^6.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prisma": "5.22.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
